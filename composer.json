{
    "name": "clarus/clarus-common",
    "description": "Common Models and Database Entities for Clarus projects",
    "type": "library",
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
        "illuminate/database": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
        "illuminate/auth": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
        "illuminate/notifications": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
        "illuminate/filesystem": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
        "illuminate/contracts": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
        "laravel/passport": "^10.0 || ^11.0 || ^12.0 || ^13.0"
    },
    "require-dev": {
        "laravel/framework": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0"
    },
    "suggest": {
        "owen-it/laravel-auditing": "Required for auditing functionality (^13.0)",
        "clarus/secure-chat": "Required for SecureChatUser trait",
        "laracasts/presenter": "Required for PresentableTrait functionality"
    },
    "autoload": {
        "psr-4": {
            "ClarusCommon\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
